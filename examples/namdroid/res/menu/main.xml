<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:namdroid="http://schemas.android.com/apk/res-auto"
    tools:context="it.unipr.ce.dsg.namdroid.MainActivity" >

    <!-- The app is using the Support Library so the showAsAction
    	attribute is not available from the android: namespace.
    	Instead this attribute is provided by the Support Library
    	through a custom XML namespace that has to be used as the
    	attribute prefix. The root defines xmlns:namdroid namespace
    	to this purpose -->
    
    <item
        android:id="@+id/action_info"
        android:icon="@drawable/ic_action_about"
        android:orderInCategory="1"
        android:title="@string/action_info"
        namdroid:showAsAction="ifRoom"/>

</menu>