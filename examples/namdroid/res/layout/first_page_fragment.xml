<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_white_1000"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/requestTextParserServiceButton"
        android:text="@string/button1_title"
        style="@style/FragmentButtonStyle" />
    
    <Button
        android:id="@+id/requestSudokuServiceButton"
        android:text="@string/button2_title"
        style="@style/FragmentButtonStyle" />
    
    <Button
        android:id="@+id/requestEightQueensProblemServiceButton"
        android:text="@string/button3_title"
        style="@style/FragmentButtonStyle" />

    <Button
        android:id="@+id/requestFMButton"
        android:text="@string/button4_title"
        style="@style/FragmentButtonStyle" />

</LinearLayout>