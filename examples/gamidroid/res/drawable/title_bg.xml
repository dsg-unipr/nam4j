<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- To display a small shadow below the bar, the border (a stroke) is
    set to 1px - grey color. The margins of the 3 sides for which
    the border has not to be displayed (i.e. top, left, right) are set
    to "minus" the size of the border "minus" 1 (that is -2), while the margin of the
    bottom side is set to 0 -->
    
    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            
            <!-- Bottom border color -->
            <!-- <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> -->

            <!-- Background color -->
            <solid android:color="#DD3F9BBF" />

            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" >
            </padding>
        </shape>
    </item>

</layer-list>