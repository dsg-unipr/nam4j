<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme" parent="AppTheme.Base"/>
    
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/light_blue_400</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        
        <!-- Navigation drawer toggle button's style -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        
        <!-- Color of the Toolbar's text -->
        <item name="android:textColorPrimary">@color/grey_white_1000</item>
        
        <item name="android:textColor">@color/light_blue_400</item>
        <item name="android:textColorSecondary">@color/grey_white_1000</item>
        <item name="android:windowNoTitle">true</item>
        
    </style>
</resources>
